{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Start Backend (Node.js)",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/index.js",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "Start Flutter App",
            "request": "launch",
            "type": "dart",
            "program": "${workspaceFolder}/flutter_app/lib/main.dart",
            "cwd": "${workspaceFolder}/flutter_app"
        }
    ],
    "compounds": [
        {
            "name": "Start Full App (Backend + Flutter)",
            "configurations": [
                "Start Backend (Node.js)",
                "Start Flutter App"
            ]
        }
    ]
}